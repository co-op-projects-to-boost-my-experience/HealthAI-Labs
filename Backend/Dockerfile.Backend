# =============================
# Stage 1: Builder
# =============================
FROM python:3.11-slim AS builder

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    wget \
    p7zip-full \
    gcc \
    python3-dev \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Download and extract MRI model
RUN wget -q -O MRI.7z https://github.com/co-op-projects-to-boost-my-experience/HealthAI-Labs/releases/download/v1.0.3/MRI.7z && \
    7z x MRI.7z -o/build -y && \
    rm MRI.7z

# Download and extract CKD models
RUN wget -q -O CKD.7z https://github.com/co-op-projects-to-boost-my-experience/HealthAI-Labs/releases/download/v1.0.2/CKD.7z && \
    7z x CKD.7z -o/build -y && \
    rm CKD.7z

# Verify model files exist
RUN test -d /build/MRI && test -d /build/CKD && \
    echo "âœ… Models downloaded successfully"

# =============================
# Stage 2: Production
# =============================
FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    TZ=UTC

WORKDIR /app

# Install runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    libgl1 \
    libglib2.0-0 \
    libpq5 \
    tzdata \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean \
    && ln -snf /usr/share/zoneinfo/$TZ /etc/localtime \
    && echo $TZ > /etc/timezone

# Copy Python packages from builder
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy models from builder
COPY --from=builder /build/MRI /app/MRI
COPY --from=builder /build/CKD /app/CKD

# Create non-root user
RUN groupadd -r healthai -g 1000 && \
    useradd -r -u 1000 -g healthai -m -s /bin/bash healthai

# Copy application code
COPY --chown=healthai:healthai app.py auth.py db.py ./

# Create necessary directories
RUN mkdir -p uploads logs && \
    chown -R healthai:healthai /app

# Switch to non-root user
USER healthai

EXPOSE 8000

# Start command
CMD ["uvicorn", "app:app", \
     "--host", "0.0.0.0", \
     "--port", "8000", \
     "--workers", "1", \
     "--log-level", "info"]